{
    "env": {
        "browser": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "installedESLint": true,
    
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true,
            "classes": true
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-constant-condition": 0,
        "indent": ["error", 2],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "react/display-name": 1
    }
}